doctype html
html
	head
		meta(http-equiv="X-UA-Compatible",content="IE=edge")
		title SignIn
		link(rel='stylesheet',href='/public/stylesheets/bootstrap.min.css')
		link(href='/public/stylesheets/signin.css',rel='stylesheet')
		
		
		script(type='text/javascript').
			function preventBack(){window.history.forward(0);}
			setTimeout("preventBack()", 0);
			window.onunload=function(){null};
			
	body
		.container
			form.form-signin(role='form', method='POST', action='/Quiz/myapp/SignIn')
				h2.form-signin-heading Please sign in
				p.error #{error}
				p #{email}
				p #{password}
				p #{out}
				
				input.form-control(type='text', name='username', placeholder='Username', required='required', autofocus='autofocus', autocomplete='off')
				input.form-control(type='password', name='password', placeholder='Password', required='required')
				label.checkbox
					input(type='checkbox', value='remember-me')
					| Remember me
				button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in